generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  BEBOER
  VIEWER
}

enum Language {
  da
  en
}

enum PhaseStatus {
  PLANNED
  ACTIVE
  COMPLETED
}

enum DocumentStatus {
  ACTIVE
  DELETED
}

enum ExportStatus {
  PENDING
  COMPLETED
  FAILED
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  passwordHash String
  role         Role
  language     Language  @default(da)
  seniorMode   Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  profile      Profile?
  tenants      TenantUnit[]
  messages     Message[] @relation("MessageCreator")
  comments     Comment[]
  reads        MessageRead[]
  auditLogs    AuditLog[]
  resetTokens  PasswordResetToken[]
}

model Profile {
  id        String @id @default(cuid())
  user      User   @relation(fields: [userId], references: [id])
  userId    String @unique
  name      String
  phone     String?
}

model Unit {
  id        String       @id @default(cuid())
  name      String
  address   String?
  houseCode String       @unique
  phases    UnitPhase[]
  tenants   TenantUnit[]
  messages  MessageTarget[]
  documents Document[]
  photos    Photo[]
}

model Phase {
  id          String      @id @default(cuid())
  name        String
  status      PhaseStatus @default(PLANNED)
  description String?
  startDate   DateTime?
  endDate     DateTime?
  unitPhases  UnitPhase[]
  messages    Message[]   @relation("MessagePhase")
}

model UnitPhase {
  id      String @id @default(cuid())
  unit    Unit   @relation(fields: [unitId], references: [id])
  unitId  String
  phase   Phase  @relation(fields: [phaseId], references: [id])
  phaseId String
  @@unique([unitId, phaseId])
}

model TenantUnit {
  id       String  @id @default(cuid())
  user     User    @relation(fields: [userId], references: [id])
  userId   String
  unit     Unit    @relation(fields: [unitId], references: [id])
  unitId   String
  active   Boolean @default(true)
  startAt  DateTime @default(now())
  endAt    DateTime?
  @@unique([userId, unitId])
}

model Message {
  id          String       @id @default(cuid())
  title       String
  content     String
  createdAt   DateTime     @default(now())
  createdBy   User         @relation("MessageCreator", fields: [createdById], references: [id])
  createdById String
  phase       Phase?       @relation("MessagePhase", fields: [phaseId], references: [id])
  phaseId     String?
  targets     MessageTarget[]
  reads       MessageRead[]
}

model MessageTarget {
  id        String  @id @default(cuid())
  message   Message @relation(fields: [messageId], references: [id])
  messageId String
  unit      Unit?   @relation(fields: [unitId], references: [id])
  unitId    String?
  role      Role?
}

model MessageRead {
  id        String   @id @default(cuid())
  message   Message  @relation(fields: [messageId], references: [id])
  messageId String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  readAt    DateTime @default(now())
  @@unique([messageId, userId])
}

model Document {
  id          String            @id @default(cuid())
  unit        Unit              @relation(fields: [unitId], references: [id])
  unitId      String
  title       String
  status      DocumentStatus    @default(ACTIVE)
  versions    DocumentVersion[]
  createdAt   DateTime          @default(now())
  createdBy   User              @relation(fields: [createdById], references: [id])
  createdById String
}

model DocumentVersion {
  id         String   @id @default(cuid())
  document   Document @relation(fields: [documentId], references: [id])
  documentId String
  version    Int
  fileKey    String
  createdAt  DateTime @default(now())
  @@unique([documentId, version])
}

model Photo {
  id          String   @id @default(cuid())
  unit        Unit     @relation(fields: [unitId], references: [id])
  unitId      String
  title       String
  fileKey     String
  pinned      Boolean  @default(false)
  createdAt   DateTime @default(now())
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById String
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  message   Message? @relation(fields: [messageId], references: [id])
  messageId String?
  document  Document? @relation(fields: [documentId], references: [id])
  documentId String?
  photo     Photo? @relation(fields: [photoId], references: [id])
  photoId   String?
  createdBy User     @relation(fields: [createdById], references: [id])
  createdById String
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  details   Json
  createdAt DateTime @default(now())
}

model ExportJob {
  id         String       @id @default(cuid())
  requestedBy User        @relation(fields: [requestedById], references: [id])
  requestedById String
  status     ExportStatus @default(PENDING)
  fileKey    String?
  createdAt  DateTime     @default(now())
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
}
